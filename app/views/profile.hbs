
<div class="container">
    <div class="row">
        <div class="col">Добро пожаловать, {{useremail}}</div>
    </div>
    <div class="container" id="evaluation-links"></div>
    <div class="row mt-3">
        <div class="col">
            <button class="btn btn-primary" onclick="getLinks()">Взять файлы на оценку</button>
        </div>
    </div>
</div>

<script>
    function getLinks(){
        fetch('/api/evaluation', {
            method: 'GET',
        }).then(async (res)=>{
            const body = await res.json();
            if(res.ok){
                const evalLinks = document.getElementById('evaluation-links');
                body.forEach((id, index)=>{
                    const link = document.createElement('a');
                    link.href = `http://localhost:3000/evaluation?id=${id}`;
                    link.innerHTML = `Открыть файл #${index+1}`;
                    evalLinks.appendChild(link);
                });
                console.log(body);
            }else{
                console.log(body);
            }
        })
    }
</script>